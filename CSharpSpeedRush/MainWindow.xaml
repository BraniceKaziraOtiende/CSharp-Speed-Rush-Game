<Window x:Class="CSharpSpeedRush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# Speed Rush"
        Height="700"
        Width="800"
        WindowStartupLocation="CenterScreen">
        <Window.Resources>
                <Style TargetType="Button">
                        <Setter Property="Background"
                                        Value="#FF3F51B5"/>
                        <Setter Property="Foreground"
                                        Value="White"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="Padding"
                                        Value="10,5"/>
                        <Setter Property="Margin"
                                        Value="5"/>
                        <Setter Property="FontWeight"
                                        Value="Bold"/>
                </Style>
                <Style TargetType="ProgressBar">
                        <Setter Property="Height"
                                        Value="22"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="Background"
                                        Value="#EEEEEE"/>
                </Style>
        </Window.Resources>

        <Grid Margin="15">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="180"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                                Text="🏎️ C# Speed Rush 🏁"
                                FontSize="28"
                                FontWeight="Bold"
                           HorizontalAlignment="Center"
                                Margin="0,0,0,20"
                                Foreground="DarkBlue"/>

                <!-- Main Game Area -->
                <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel -->
                        <StackPanel Grid.Column="0"
                                        Margin="0,0,20,0">
                                <TextBlock Text="🚗 Select Car:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,0,0,8"/>
                                <ComboBox x:Name="CarComboBox"
                                                SelectionChanged="CarComboBox_SelectionChanged"
                                          Padding="8"
                                                FontSize="14"
                                                Height="32"/>

                                <TextBlock Text="📊 Car Stats:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,20,0,8"/>
                                <Border BorderBrush="Gray"
                                                BorderThickness="1"
                                                Padding="12"
                                                CornerRadius="6"
                                                Background="#FFF5F5F5">
                                        <TextBlock x:Name="CarStatsText"
                                                        Text="No car selected"
                                                   TextWrapping="Wrap"
                                                        FontSize="13"/>
                                </Border>

                                <Button x:Name="StartButton"
                                                Content="🚀 Start Race"
                                                Click="StartButton_Click"
                                        Margin="0,25,0,0"
                                                Padding="12,8"
                                                FontSize="16"
                                                Background="#FF4CAF50"
                                                Height="40"/>
                        </StackPanel>

                        <!-- Right Panel -->
                        <StackPanel Grid.Column="1"
                                        Margin="20,0,0,0">
                                <TextBlock Text="🎮 Race Status:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,0,0,8"/>
                                <TextBlock x:Name="StatusText"
                                                Text="Not Started"
                                                FontSize="14"
                                                Foreground="Red"/>

                                <TextBlock Text="🏁 Current Lap:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,20,0,8"/>
                                <TextBlock x:Name="LapText"
                                                Text="1 / 5"
                                                FontSize="14"/>

                                <TextBlock Text="⏱️ Race Time:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,20,0,8"/>
                                <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <TextBlock x:Name="ElapsedTimeText"
                                                        Text="00:00"
                                                   FontSize="14"
                                                        FontWeight="Bold"
                                                        Foreground="DarkGreen"/>
                                        <TextBlock Text=" / "
                                                        Margin="5,0"
                                                        FontSize="14"/>
                                        <TextBlock x:Name="RemainingTimeText"
                                                        Text="03:00"
                                                   FontSize="14"
                                                        FontWeight="Bold"
                                                        Foreground="Red"/>
                                </StackPanel>
                                <ProgressBar x:Name="TimeProgressBar"
                                                Maximum="180"
                                                Value="180"
                                             Foreground="#FFF44336"
                                                Height="20"
                                                Margin="0,5,0,0"/>

                                <TextBlock Text="⛽ Fuel Level:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,20,0,8"/>
                                <ProgressBar x:Name="FuelProgressBar"
                                                Maximum="100"
                                                Value="100"
                                                Foreground="#FFFF9800"/>
                                <TextBlock x:Name="FuelText"
                                                Text="100%"
                                                FontSize="13"
                                                HorizontalAlignment="Center"/>

                                <TextBlock Text="🏆 Race Progress:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,20,0,8"/>
                                <ProgressBar x:Name="RaceProgressBar"
                                                Maximum="100"
                                                Value="0"
                                                Foreground="#FF4CAF50"/>
                                <TextBlock x:Name="ProgressText"
                                                Text="0%"
                                                FontSize="13"
                                                HorizontalAlignment="Center"/>

                                <TextBlock Text="🚀 Speed:"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Margin="0,20,0,8"/>
                                <TextBlock x:Name="SpeedText"
                                                Text="0 mph"
                                                FontSize="14"/>
                        </StackPanel>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,30,0,0">
                        <Button x:Name="SpeedUpButton"
                                        Content="🚀 Speed Up"
                                        Click="SpeedUpButton_Click"
                                Margin="10"
                                        Padding="20,12"
                                        IsEnabled="False"
                                        FontSize="14"
                                Background="#FFF44336"
                                        Width="140"/>
                        <Button x:Name="MaintainButton"
                                        Content="⚡ Maintain Speed"
                                        Click="MaintainButton_Click"
                                Margin="10"
                                        Padding="20,12"
                                        IsEnabled="False"
                                        FontSize="14"
                                Background="#FF2196F3"
                                        Width="140"/>
                        <Button x:Name="PitStopButton"
                                        Content="🔧 Pit Stop"
                                        Click="PitStopButton_Click"
                                Margin="10"
                                        Padding="20,12"
                                        IsEnabled="False"
                                        FontSize="14"
                                Background="#FFFFC107"
                                        Width="140"/>
                </StackPanel>

                <!-- Action Log -->
                <Border Grid.Row="3"
                                BorderBrush="#FFBDBDBD"
                                BorderThickness="0,1,0,0"
                        Margin="0,15,0,0"
                                Padding="8"
                                Background="#FFF5F5F5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="ActionLogText"
                                                TextWrapping="Wrap"
                                                FontFamily="Consolas"
                                         FontSize="13"
                                                IsReadOnly="True"
                                                Background="Transparent"
                                         BorderThickness="0"
                                                VerticalAlignment="Stretch"/>
                        </ScrollViewer>
                </Border>
        </Grid>
</Window>