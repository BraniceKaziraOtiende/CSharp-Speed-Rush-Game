<Window x:Class="CSharpSpeedRush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# Speed Rush"
        Height="650"
        Width="650"
        WindowStartupLocation="CenterScreen">
        <Window.Resources>
                <Style TargetType="Button">
                        <Setter Property="Background"
                                        Value="#FF3F51B5"/>
                        <Setter Property="Foreground"
                                        Value="White"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="Padding"
                                        Value="10,5"/>
                        <Setter Property="Margin"
                                        Value="5"/>
                        <Setter Property="FontWeight"
                                        Value="Bold"/>
                </Style>
                <Style TargetType="ProgressBar">
                        <Setter Property="Height"
                                        Value="20"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="Background"
                                        Value="#EEEEEE"/>
                </Style>
        </Window.Resources>

        <Grid Margin="10">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="🏎️ C# Speed Rush 🏁"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="DarkBlue"/>

                <!-- Main Game Area -->
                <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel -->
                        <StackPanel Grid.Column="0"
                                        Margin="0,0,15,0">
                                <TextBlock Text="🚗 Select Car:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="CarComboBox"
                                          SelectionChanged="CarComboBox_SelectionChanged"
                                          Padding="5"
                                          FontSize="12"/>

                                <TextBlock Text="📊 Car Stats:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,20,0,5"/>
                                <Border BorderBrush="Gray"
                                        BorderThickness="1"
                                        Padding="10"
                                        CornerRadius="5"
                                        Background="LightGray">
                                        <TextBlock x:Name="CarStatsText"
                                                   Text="No car selected"
                                                   TextWrapping="Wrap"
                                                   FontSize="11"/>
                                </Border>

                                <Button x:Name="StartButton"
                                        Content="🚀 Start Race"
                                        Click="StartButton_Click"
                                        Margin="0,20,0,0"
                                        Padding="10,8"
                                        FontSize="14"
                                        Background="Green"/>

                                <TextBlock Text="🏁 Race Progress:"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Margin="0,20,0,5"/>
                                <TextBlock x:Name="ProgressIndicator"
                                           Text="[     ==>     ]"
                                           FontFamily="Consolas"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           Foreground="Blue"/>
                        </StackPanel>

                        <!-- Right Panel -->
                        <StackPanel Grid.Column="1"
                                        Margin="15,0,0,0">
                                <TextBlock Text="🎮 Race Status:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="StatusText"
                                           Text="Not Started"
                                           FontSize="12"
                                           Foreground="Red"/>

                                <TextBlock Text="🏁 Current Lap:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,15,0,5"/>
                                <TextBlock x:Name="LapText"
                                           Text="1 / 5"
                                           FontSize="12"/>

                                <TextBlock Text="⛽ Fuel Level:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,15,0,5"/>
                                <ProgressBar x:Name="FuelProgressBar"
                                             Maximum="100"
                                             Value="100"
                                             Foreground="Orange"/>
                                <TextBlock x:Name="FuelText"
                                           Text="100%"
                                           FontSize="11"
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="🏆 Race Progress:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,15,0,5"/>
                                <ProgressBar x:Name="RaceProgressBar"
                                             Maximum="100"
                                             Value="0"
                                             Foreground="Green"/>
                                <TextBlock x:Name="ProgressText"
                                           Text="0%"
                                           FontSize="11"
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="⏱️ Time Remaining:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,15,0,5"/>
                                <ProgressBar x:Name="TimeProgressBar"
                                             Maximum="600"
                                             Value="600"
                                             Foreground="Red"/>
                                <TextBlock x:Name="TimeText"
                                           Text="10:00"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           FontWeight="Bold"/>

                                <TextBlock Text="🚀 Speed:"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,15,0,5"/>
                                <TextBlock x:Name="SpeedText"
                                           Text="0 mph"
                                           FontSize="12"/>
                        </StackPanel>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,25,0,0">
                        <Button x:Name="SpeedUpButton"
                                Content="🚀 Speed Up"
                                Click="SpeedUpButton_Click"
                                Margin="8"
                                Padding="18,12"
                                IsEnabled="False"
                                FontSize="12"
                                Background="Red"/>
                        <Button x:Name="MaintainButton"
                                Content="⚡ Maintain Speed"
                                Click="MaintainButton_Click"
                                Margin="8"
                                Padding="18,12"
                                IsEnabled="False"
                                FontSize="12"
                                Background="Blue"/>
                        <Button x:Name="PitStopButton"
                                Content="🔧 Pit Stop"
                                Click="PitStopButton_Click"
                                Margin="8"
                                Padding="18,12"
                                IsEnabled="False"
                                FontSize="12"
                                Background="Orange"/>
                </StackPanel>

                <!-- Action Log -->
                <Border Grid.Row="3"
                        BorderBrush="Gray"
                        BorderThickness="0,1,0,0"
                        Margin="0,10,0,0"
                        Padding="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="ActionLogText"
                                         TextWrapping="Wrap"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         IsReadOnly="True"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                        </ScrollViewer>
                </Border>

                <!-- Race Complete Overlay -->
                <Grid x:Name="RaceCompleteOverlay"
                                Grid.RowSpan="4"
                      Background="#80000000"
                                Visibility="Collapsed">
                        <Border Background="DarkGreen"
                                        CornerRadius="10"
                                Padding="20"
                                        HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel>
                                        <TextBlock x:Name="RaceResultText"
                                                        FontSize="24"
                                                   Foreground="White"
                                                        FontWeight="Bold"
                                                   TextAlignment="Center"
                                                        Margin="0,0,0,20"/>
                                        <Button x:Name="RestartButton"
                                                        Content="Play Again"
                                                Click="RestartButton_Click"
                                                        Padding="15,5"
                                                FontSize="16"
                                                        HorizontalAlignment="Center"/>
                                </StackPanel>
                        </Border>
                </Grid>
        </Grid>
</Window>